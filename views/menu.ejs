  </head>
<body>
  <%- include('partials/_header.ejs') %>
  <main style="margin: 1em;">
    <h3>Menu ðŸ“”</h3>
    <table class="table table-striped">

        <thead>
          <tr>
            <th scope="col">Photo</th>
            <th scope="col">Food Item</th>
            <th scope="col">Cooking Time</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>

          </tr>
        </thead>
        <tbody>

          <% for (let item in items) { %>

          <tr>
            <th scope="row">
              <div class='image-wrapper'>
                <img src= <%= items[item].thumbnail %> class="img-thumbnail" alt="burger">
              </div>
            </th>

            <td> <%= items[item].name %> </td>
            <td> <%= items[item].cooking_time %> </td>
            <td><%= items[item].description %></td>
            <td>$<%= items[item].price %></td>
            <td>  <form method="POST" action="/cart/add">
              <button class="btn btn-outline-danger">Add To Cart</button> </td>
          </tr>
          <% } %>

        </tbody>

    </table>

  </main>

</body>
</html>
